<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Accounts</title>
  <style> body { font-family: Arial; margin: 20px } .box { border:1px dashed #c00; padding:12px; } </style>
</head>
<body>
  <nav><a href="/">Home</a>
  <h1><%= which %> accounts (role: <%= user.role %>)</h1>

  <div class="box">
    <ul>
      <% accounts.forEach(a => { %>
        <li>ID: <%= a.id %> — <strong><%= a.name %></strong> — balance: <%= a.balance %></li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
