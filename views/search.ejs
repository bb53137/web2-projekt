<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Search (XSS demo)</title>
  <style>
    body { font-family: Arial; margin: 20px; }
    .box { border: 1px dashed #c00; padding: 12px; margin-top: 20px; }
  </style>
</head>
<body>
  <h1>Search (Reflected XSS demo)</h1>

  <nav>
    <a href="/">Home</a>
  </nav>

  <form action="/search" method="get">
    <input type="text" name="q" placeholder="Enter search term" />
    <button type="submit">Search</button>
  </form>

  <% if (typeof query !== 'undefined') { %>
    <div class="box">
      <h3>Search result:</h3>

      <% if (xssEnabled) { %>
        <!-- RANJIVO: output bez escape-a -->
        <div><%- query %></div>
        <p><strong>⚠️ XSS is ENABLED</strong></p>

      <% } else { %>
        <!-- SIGURNO: escaping -->
        <div><%= query %></div>
        <p><strong>✅ XSS is DISABLED</strong></p>
      <% } %>
    </div>
  <% } %>

</body>
</html>
